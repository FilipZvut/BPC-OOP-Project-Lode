@page
@model GameModel
@{
    ViewData["Title"] = "BattleShips";
    GameManager gameManager = new GameManager(@Model.gm);

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Battleship Game</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #ADD8E6;
            padding-top: 20px; 
             margin: 0;
         }

         h1 {
             margin-top: 0; 
            color: #000000;
            text-align: center;
        }

        .container {
            display: flex;
            justify-content: center;
        }

        .board {
            border: 2px solid #000;
            background-color: #ADD8E6;
            width: 500px;
            height: 500px;
            display: grid;
            grid-template-columns: repeat(6, 1fr); /* Přidáme jednu sloupcovou buňku navíc pro označení řádků a sloupců */
            grid-template-rows: repeat(6, 1fr);
            gap: 1px;
        }

        .cell2 {
            border: 1px solid #999;
            background-color: #87CEFA;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 3rem;
            font-weight: bold;
            cursor: pointer; /* Změněno z 'pointer' na 'default' */
        }

        .cell2T {
            border: 0px solid #999;
            background-color: #87CEFA;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 3rem;
            block-size: 5rem;
            font-weight: bold;
            cursor: pointer; /* Změněno z 'pointer' na 'default' */
        }

        .cell1 {
            border: 1px solid #999;
            background-color: #87CEFA;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 1rem;
            font-weight: bold;
            cursor: default; /* Změněno z 'pointer' na 'default' */
        }

        .cell2:hover {
            background-color: #58B6DE; /* Barva pozadí při najetí myší změněna na stejnou jako normálně */
        }

        .cell2T:hover {
            background-color: #58B6DE; /* Barva pozadí při najetí myší změněna na stejnou jako normálně */
        }

        .message {
            text-align: center;
            margin-top: 20px;
            color: #FFFFFF;
            font-size: 1.2rem;
            font-weight: bold;
            color: black;
        }

        /* Nový styl pro první čtvereček vlevo nahoře */
        .empty-cell {
            background-color: #24D0F2
        }
    </style>
</head>
<body>
    <h1 style="text-align: center; color: #000000;">Battleship Game</h1>
    <div class="container">
        <div style="text-align: center; margin-right: 20px; font-style:bold">
            <h2 style="color: #000000;">@Model.Nazev1</h2>
            <div class="board" id="player-board">
                <!-- Player's board will be dynamically generated here -->
                <div class="cell1 empty-cell"></div> <!-- Prázdný čtvereček vlevo nahoře -->
                @for (int row = 0; row < 5; row++)
                {
                    <div class="cell1 empty-cell" disabled>@((char)('A' + row))</div>
                }
                @for (int row = 0; row < 5; row++)
                {
                    <div class="cell1 empty-cell" disabled>@((char)('1' + row))</div>
                    @for (int col = 0; col < 5; col++)
                    {
                        <div class="cell2">
                            <form method="Post">
                                <input type="hidden" name="row" value="@row" /> <!-- Skryté pole pro první argument -->
                                <input type="hidden" name="col" value="@col" /> <!-- Skryté pole pro druhý argument -->
                                <input type="hidden" name="id" value="@gameManager.player2.Id" /> <!-- Skryté pole pro druhý argument -->
                                <button class="cell2T" asp-page-handler="Nahodne" name="gameData" value="@gameManager.ToString()">@Model.GetCellSymbol(@gameManager.player1.Board.StringGrid[row, col])</button>
                            </form>
                        </div>
                    }
                }
            </div>
        </div>

        <div style="text-align: center;">
            <h2 style="color: #000000;">@Model.Nazev2</h2>
            <div class="board" id="opponent-board">
                <!-- Opponent's board will be dynamically generated here -->
                <div class="cell1 empty-cell"></div> <!-- Prázdný čtvereček vlevo nahoře -->
                @for (int row = 0; row < 5; row++)
                {
                    <div class="cell1 empty-cell">@((char)('A' + row))</div>
                }
                @for (int row = 0; row < 5; row++)
                {
                    <div class="cell1 empty-cell">@((char)('1' + row))</div>
                    @for (int col = 0; col < 5; col++)
                    {
                        <div class="cell2">
                            <form method="Post">
                                <input type="hidden" name="row" value="@row" /> <!-- Skryté pole pro první argument -->
                                <input type="hidden" name="col" value="@col" />
                                <input type="hidden" name="id" value="@gameManager.player1.Id" /><!-- Skryté pole pro druhý argument -->
                                <button class="cell2T" asp-page-handler="Nahodne" name="gameData" value="@gameManager.ToString()">@Model.GetCellSymbol(@gameManager.player2.Board.StringGrid[row, col])</button>
                            </form>
                        </div>

                    }
                }
            </div>
        </div>
    </div>
    <div class="message" id="message">Waiting for @gameManager.game._currentPlayer.Name</div>
</body>
</html>

